<% layout('./layouts/boillerplate') -%>

<div  class="md:w-1/2 mx-8 md:mx-auto">
  <p class="text-3xl font-medium my-4">Change Password</p>
   <form action="/checkusername" method="POST">
    <div class="mb-5">
        <label for="username" class="block mb-2 text-sm font-medium text-black">Username</label>
        <input type="text" id="username"  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="username" placeholder="Enter Username " required />
    </div>
    <button type="submit" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Check User name</button>

   </form>
</div>