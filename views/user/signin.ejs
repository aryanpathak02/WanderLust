<% layout('./layouts/boillerplate') -%>

<div class="md:w-1/2 mx-8 md:mx-auto">
    <h1 class="text-3xl my-6">Sign In</h1>
    <form action="/signin" method="POST">
        <div class="mb-5">
            <label for="username" class="block mb-2 text-sm font-medium text-black">Username</label>
            <input type="text" id="username"  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="username" placeholder="Enter Username " required />
        </div>
        <div class="mb-5">
            <label for="password" class="block mb-2 text-sm font-medium text-black">Password</label>
            <input type="password" id="password"  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="password" placeholder="Enter Password " required />
        </div>
        <div class="my-2 text-sm underline flex justify-end items-center text-red-600 hover:text-red-400">
            <a href="/usernameform">Forget Password?</a>
        </div>
        <button type="submit" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Sign In</button>
    </form>
    <div class="my-6 text-sm  flex justify-center items-center text-black font-medium">
      <p>Don't have an account? <a class="underline text-red-600 hover:text-red-400" href="/signup">Sign Up</a></p>
    </div>
</div>