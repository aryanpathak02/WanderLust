<% layout('./layouts/boillerplate') -%>

<body>
    <div class="w-[60%] mx-auto">
    <h1 class="text-2xl font-medium my-4" >Edit the Listing</h1>
    <form  action="/listings/<%= data._id  %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="mb-5">
            <label for="title" class="block mb-2 text-sm font-medium text-black">Title</label>
            <input type="text" id="title"  value="<%= data.title %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[title]" placeholder="Add a Tittle " required />
        </div>
        <div class="mb-5">
            <label for="description" class="block mb-2 text-sm font-medium text-black">Description</label>
            <input type="text" id="description"  value="<%= data.description %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[description]" placeholder="Enter The description" required />
        </div >
        <div class="mb-5">
            <img class="rounded-xl" src="<%=originalImage %>" alt="listing_image">
        </div>
        
        <div class="mb-5">
            <label for="image" class="block mb-2 text-sm font-medium text-black">Upload Image</label>
            <input type="file" id="image" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full " name="listing[image]"  />
        </div>
        <div class="grid sm:grid-cols-5 gap-4">

        <div class="mb-5 sm:col-span-1">
            <label for="price" class="block mb-2 text-sm font-medium text-black">Price</label>
            <input type="number" id="price"   value="<%= data.price %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[price]" placeholder="Enter Price " required />
        </div>
        <div class="mb-5  sm:col-span-4">
            <label for="location" class="block mb-2 text-sm font-medium text-black">Location</label>
            <input type="text" id="location"  value="<%= data.location %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[location]" placeholder="Enter Your Location " readonly />
        </div>
        </div>
        <div class="mb-5">
            <label for="country" class="block mb-2 text-sm font-medium text-black">Country</label>
            <input type="text" id="country"  value="<%= data.country %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[country]" placeholder="Enter Country Name" required />
        </div>
         
         <button class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 ">Submit</button>
    </form>
</div>
</body>



