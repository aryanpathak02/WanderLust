<% layout('./layouts/boillerplate') -%>

<body>
    <div class="lg:w-[60%] mx-6 sm:mx-20 lg:mx-auto">
    <h1 class="text-2xl font-medium my-4" >Create a New Listing</h1>
    <form action="/listings" method="POST" enctype="multipart/form-data">
        <div class="mb-5">
            <label for="title" class="block mb-2 text-sm font-medium text-black">Title</label>
            <input type="text" id="title" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[title]" placeholder="Add a Tittle " required />
        </div>
        <div class="mb-5">
            <label for="description" class="block mb-2 text-sm font-medium text-black">Description</label>
            <input type="text" id="description" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[description]" placeholder="Enter The description" required />
        </div>
        <div class="mb-5">
            <label for="image" class="block mb-2 text-sm font-medium text-black">Image</label>
            <input type="file" id="image" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full " name="listing[image]"  required  />
        </div>
        <div class="mb-5">
            <label for="category" class="block mb-2 text-sm font-medium text-gray-900 ">Select an option</label>
            <select id="category" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" name="listing[category]"  required>
              <option selected>Choose a catory</option>
              <option value="new">New</option>
              <option value="houseboats">Houseboats</option>
              <option value="mountain">Mountain</option>
              <option value=" top_city">Top city</option>
              <option value="beaches">Beaches</option>
              <option value="camping">Camping</option>
              <option value="tower">Tower</option>
              <option value="camping_van">Camping van</option>
              <option value="egloo">Egloo</option>
            </select>
        </div>
        <div class="grid md:grid-cols-5 gap-4">
        <div class="md:col-span-1">
            <label for="price" class="block mb-2 text-sm font-medium text-black">Price</label>
            <input type="number" id="price" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[price]" placeholder="Enter Price " required />
        </div>
        <div class="mb-5 md:col-span-4">
            <label for="location" class="block mb-2 text-sm font-medium text-black">Location</label>
            <input type="text" id="location" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[location]" placeholder="Enter Your Location " required />
        </div>
    </div>
        <div class="mb-5">
            <label for="country" class="block mb-2 text-sm font-medium text-black">Country</label>
            <input type="text" id="country" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " name="listing[country]" placeholder="Enter Country Name" required />
        </div>
         
         <button class="text-white bg-red-600 hover:bg-red-500 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 ">Submit</button>
    </form>
</div>
</body>


